#include <iostream>
#include <fstream>
using namespace std;

int main() {
	cout << "Enter word to search: ";
	string search;
	cin >> search;
	ifstream stream ("text.txt");
	if(stream.is_open()) {
		string line;
		int lineNumber = 0;
		while(getline(stream, line)) {
			if(line.find(search) != string::npos)
				cout << search << " found at line " << lineNumber++ << endl;
		}
		stream.close();
	}
	else {
		cout << "unable to open text.txt";
	}
	return 0;
}
