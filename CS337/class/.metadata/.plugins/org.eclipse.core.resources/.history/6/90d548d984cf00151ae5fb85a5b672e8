#include <iostream>
using namespace std;

char alphabet [26];
long longs [26];

int read();

int main() {
	for(int i = 0; i < 26; i++) {
		longs[i] = 0;
		alphabet[i] = 'a' + i;
	}
	return 0;
}

void read() {
	cout << "Enter the cypher text (<Enter><Ctrl>-D to end): ";
	string text;
	cin >> text;
}
